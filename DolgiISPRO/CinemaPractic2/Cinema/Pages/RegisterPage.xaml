<Page x:Class="Cinema.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cinema.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Имя"/>
            <TextBox Text="{Binding Name}"/>
            <TextBlock Text="Фамилия"/>
            <TextBox Text="{Binding Family}"/>
            <TextBlock Text="Логин"/>
            <TextBox Text="{Binding Login}"/>
            <TextBlock Text="Пароль"/>
            <TextBox Text="{Binding Password}"/>
            <Button x:Name="BSave" Content="Сохранить" Click="BSave_Click"/>
            <Button x:Name="BCancel" Content="Отменить" Click="BCancel_Click"/>

        </StackPanel>
    </Grid>
</Page>
