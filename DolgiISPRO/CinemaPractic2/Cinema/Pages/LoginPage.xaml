<Page x:Class="Cinema.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cinema.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Логин"/>
            <TextBox x:Name="TBLogin"/>
            <TextBlock Text="Пароль"/>
            <TextBox x:Name="TBPasword"/>
            <Button x:Name="BLogin" Content="Войти" Click="BLogin_Click"/>
            <Button x:Name="BRegister" Content="Зарегистрироваться" Click="BRegister_Click"/>
        </StackPanel>
    </Grid>
</Page>
